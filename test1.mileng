inicio
  entero a;
  entero b;
  entero suma;
  entero resta;
  entero multi;
  decimal div;

  escribir("Ingrese el primer número:");
  leer(a);
  escribir("Ingrese el segundo número:");
  leer(b);

  suma = a + b;
  resta = a - b;
  multi = a * b;
  div = a / b;

  escribir("Suma:");
  escribir(suma);
  escribir("Resta:");
  escribir(resta);
  escribir("Multiplicación:");
  escribir(multi);
  escribir("División:");
  escribir(div);
fin
